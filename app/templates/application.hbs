{{page-title 'Rock & Roll with Octane'}}

<div class='bg-blue-900 text-gray-100 p-8 h-screen'>
  <div class='mx-auto mb-4'>
    <div class='h-12 flex items-center mb-4 border-b-2'>
      <a href='#'>
        <h1 class='font-bold text-2xl'>
          Rock & Roll
          <span class='font-normal'>
            with Octane
          </span>
        </h1>
      </a>
    </div>
  </div>
  <ul class='space-y-4'>
    {{#each
      (array
        (hash title='Black Dog' band='Led Zeppelin' rating=3)
        (hash title='Yellow Ledbetter' band='Perl Jam' rating=4)
        (hash title='The Pretender' band='Foo Fighters' rating=2)
      ) as |song|
    }}
      <li class='leading-loose flex justify-between bg-blue-700'>
        <span>
          {{song.title}} by {{song.band}}
        </span>
        <span>
          ({{song.rating}})
        </span>
      </li>
    {{/each}}
  </ul>
</div>
